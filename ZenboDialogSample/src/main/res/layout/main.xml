<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lib"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carey.guide.Main">

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="265dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="圖書館服務"
        android:textColor="#25416F"
        android:textSize="45dp" />

    <Button
        android:id="@+id/btn_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#25416F"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_rounde"
        android:text="導覽" />

    <Button
        android:id="@+id/btn_advisory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#25416F"
        android:layout_marginTop="140dp"
        android:background="@drawable/button_rounde"
        android:text="定點諮詢" />

    <Button
        android:id="@+id/btn_lib_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#25416F"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_rounde"
        android:text="館藏查詢" />

    <Button
        android:id="@+id/btn_libspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#25416F"
        android:layout_marginTop="260dp"
        android:background="@drawable/button_rounde"
        android:text="圖書館空間座位預約" />

</RelativeLayout>
